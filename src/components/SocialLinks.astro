---
interface Props {
    email?: string;
    twitter?: string;
}

const { 
    email = "sharpeurnes@gmail.com", 
    twitter = "https://twitter.com/SharpeurNes" 
} = Astro.props;
---

<div class="social-links">
    <a href={`mailto:${email}`} class="social-link" title="Send Email">
        <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
    </a>
    
    <a href={twitter} class="social-link" title="Twitter" target="_blank" rel="noopener noreferrer">
        <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
        </svg>
    </a>
</div>

<style>
    .social-links {
        display: flex;
        gap: 2rem;
        justify-content: center;
    }

    .social-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 60px;
        height: 60px;
        background: var(--background-glass);
        border: 1px solid var(--border-glass);
        border-radius: 50%;
        color: var(--text-medium);
        text-decoration: none;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .social-link:hover {
        background: rgba(192, 132, 252, 0.2);
        border-color: var(--primary-purple);
        color: var(--primary-purple);
        transform: translateY(-5px) scale(1.1);
        box-shadow: 0 10px 25px rgba(192, 132, 252, 0.3);
    }

    .social-link svg {
        width: 24px;
        height: 24px;
    }

    @media (max-width: 768px) {
        .social-links {
            gap: 1.5rem;
        }
    }
</style>