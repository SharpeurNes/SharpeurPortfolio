---
interface Props {
    title: string;
    description?: string;
}

const { title, description = "Portfolio de Sharpeur - C# and NodeJS Developer" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="stylesheet" href="/src/styles/global.css" />
    </head>
    <body>
        <slot />
    </body>
</html>