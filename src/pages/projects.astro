---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
    {
        title: "Xelorium",
        image: "images/xelorium/xelorium011c-home.png",
        description: "2D Isometric game with turn based combat ü§ê",
        technologies: ["Unity 6.2", "2D", "Isometric"],
        projectUrl: "./projects/xelorium",
        btnName:"More info",
        progress: 4
    },{
        title: "VT Project",
        image: "images/vt-project/0.2.0.png",
        description: "Inspired by Uma Musume. Rogue-like training game, but with VTuber involved.",
        technologies: ["Unity 6.2", "Node.JS", "v0.1.0"],
        projectUrl: "./projects/vt-project",
        btnName:"More Info",
        progress: 15
    },{
        title: "Fortnite Lobby",
        image: "images/others/ft-lobby-1.png",
        description: "Recreation of the Fortnite main menu and integration of emotes/dances, testable online with Unity's WebGL.",
        technologies: ["Unity 6.2", "WebGL", "Blender", "FortnitePorting"],
        projectUrl: "./projects/fortnite-lobby",
        btnName:"Try it",
        progress: 99
    },{
        title: "Idle Game",
        image: "images/others/coming-soon.png",
        description: "Small project inspired by a lot of idle games.",
        technologies: ["Unity 6.2", "Live2D"],
        projectUrl: "",
        btnName:"",
        progress: 0
    },
    {
        title: "CoC like",
        image: "images/others/coclike.jpg",
        description: "Fun project, Clash of clans like with anime characters and gacha aspect. Currently in stand-by.",
        technologies: ["Unity 5", "Blender"],
        projectUrl: "",
        progress: 30
    },
    {
        title: "MoeMatch",
        image: "images/others/coming-soon.png",
        description: "Simple Match-3 game. The goal is to quickly release a simple but finished game on the PlayStore for training purposes.",
        technologies: ["Unity 6.2", "PlayStore"],
        progress: 15
    },
    {
        title: "KaliyugApp",
        description: "Android app in Kotlin for a french forum.",
        image: "images/others/kaliyugapp.jpg",
        technologies: ["Kotlin", "AndroidStudio", "Compose"],
        projectUrl: "",
        btnName: "",
        progress: 45
    }
];
---

<Layout title="Projects - Sharpeur" description="All my projects">
    <div class="app-container">
        <Header currentPage="projects" />
        
        <main>
            <div class="projects-section">
                <div class="container">
                    <div class="section-header">
                        <h1>My Projects</h1>
                        <p>Here is all my projects done or currently in progress.</p>
                    </div>
                    
                    <div class="projects-grid">
                        {projects.map((project) => (
                            <ProjectCard
                                title={project.title}
                                description={project.description}
                                image={project.image}
                                technologies={project.technologies}
                                projectUrl={project.projectUrl}
                                btnName={project.btnName}
                                progress={project.progress}
                            />
                        ))}
                    </div>
                </div>
            </div>
        </main>

        <Footer author="Sharpeur" />
    </div>
</Layout>

<style>
    .app-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
        padding: 2rem 0;
    }

    .projects-section {
        width: 100%;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-header h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--text-light) 0%, var(--primary-purple) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .section-header p {
        font-size: 1.2rem;
        color: var(--text-muted);
        max-width: 600px;
        margin: 0 auto;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    @media (max-width: 768px) {
        .section-header h1 {
            font-size: 2.5rem;
        }
        
        .projects-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        main {
            padding: 2rem 0;
        }
    }

    @media (max-width: 480px) {
        .projects-grid {
            padding: 0 1rem;
        }
    }
</style>